{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
        {{#link-to 'post' post}}{{post.title}}{{/link-to}}
      {{/text.headline}}
      {{#text.subhead}}
        {{#paper-chips
          readOnly=true
          content=post.categories as |category|
        }}
          {{#link-to 'blog' (query-params categories=(array category.id))}}
            {{category.title}}
          {{/link-to}}
        {{/paper-chips}}
      {{/text.subhead}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content class="layout-row layout-align-space-between"}}
    {{#if listView}}
      <div class="read-more">
        {{#link-to 'post' post}}read full post{{/link-to}}
      </div>
    {{else}}
      <div class="card-content-inner">
        <div class="{{if listView "limitted"}}">
          {{markdown-to-html
            markdown=post.body
            extensions='targetblank'
          }}
        </div>
      </div>
      {{#if showActionButtons}}
        {{#card.actions class="layout-column"}}
          {{#link-to 'post.edit' post class='md-button'}}Edit{{/link-to}}
          {{#paper-button click=(route-action "remove" post)}}Delete{{/paper-button}}
        {{/card.actions}}
      {{/if}}
    {{/if}}
  {{/card.content}}
{{/paper-card}}
